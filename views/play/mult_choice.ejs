<h1>Multiple Choice Quiz</h1>


<p><%=question%></p>

<!-- Insert image if provided -->



<p>

    <!-- Edit name of variables when connected to db -->
    <%

    options = [correct_ans=answers.correct]
    options = options.concat(answers.other)
    function shuffle(a) {
    var j, x, i;
    for (i = a.length - 1; i > 0; i--) {
    j = Math.floor(Math.random() * (i + 1));
    x = a[i];
    a[i] = a[j];
    a[j] = x;
    }
    return a;
    }
    shuffle(options);

    for(var i=0; i<options.length; i++){

        var option_class;
        if(options[i] === correct_ans){
            option_class = "correct";
        } else {
            option_class = "wrong";
        }
    %>
        <button class="<%=option_class%>" onclick="toggleMessageWindow(this)"><%=options[i]%></button>
    <%}%>




</p>


